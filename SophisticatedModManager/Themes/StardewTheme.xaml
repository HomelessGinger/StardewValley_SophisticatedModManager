<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== COLORS ==================== -->
    <Color x:Key="WoodBrownColor">#6B3710</Color>
    <Color x:Key="WarmGoldColor">#DDA059</Color>
    <Color x:Key="ParchmentCreamColor">#F5E6C8</Color>
    <Color x:Key="DarkEarthColor">#3B2007</Color>
    <Color x:Key="LeafGreenColor">#4A8C1C</Color>
    <Color x:Key="LeafGreenHoverColor">#5BA822</Color>
    <Color x:Key="BarnRedColor">#B52121</Color>
    <Color x:Key="BarnRedHoverColor">#D42A2A</Color>
    <Color x:Key="SidebarBgColor">#4A2E14</Color>
    <Color x:Key="SidebarHoverColor">#5C3A1A</Color>
    <Color x:Key="ContentBgColor">#F2DDB6</Color>
    <Color x:Key="CardBgColor">#FAF0DB</Color>
    <Color x:Key="CardBorderColor">#C4A46C</Color>
    <Color x:Key="SidebarTextColor">#E8D5B5</Color>
    <Color x:Key="ActiveProfileColor">#FFD921</Color>

    <!-- ==================== ADDITIONAL COLORS ==================== -->
    <Color x:Key="SubtleTextColor">#7A5C3A</Color>
    <Color x:Key="MutedTextColor">#9A7A5A</Color>
    <Color x:Key="ErrorRedColor">#C0392B</Color>
    <Color x:Key="WarningOrangeColor">#E65100</Color>
    <Color x:Key="SmapiGreenColor">#8BC34A</Color>
    <Color x:Key="ConfigBorderColor">#E0D5C0</Color>
    <Color x:Key="DeleteBgColor">#5C2020</Color>
    <Color x:Key="PlayButtonPressedColor">#3D7516</Color>

    <!-- Semi-transparent hover backgrounds -->
    <Color x:Key="WarmGoldHoverBgColor">#20DDA059</Color>
    <Color x:Key="BarnRedHoverBgColor">#20B52121</Color>
    <Color x:Key="HeartRedHoverBgColor">#20C0392B</Color>
    <Color x:Key="LeafGreenHoverBgColor">#204A8C1C</Color>

    <!-- Overlay dimming -->
    <Color x:Key="OverlayDimColor">#80000000</Color>
    <Color x:Key="OverlayDarkDimColor">#CC000000</Color>

    <!-- ==================== BRUSHES ==================== -->
    <SolidColorBrush x:Key="WoodBrownBrush" Color="{StaticResource WoodBrownColor}"/>
    <SolidColorBrush x:Key="WarmGoldBrush" Color="{StaticResource WarmGoldColor}"/>
    <SolidColorBrush x:Key="ParchmentCreamBrush" Color="{StaticResource ParchmentCreamColor}"/>
    <SolidColorBrush x:Key="DarkEarthBrush" Color="{StaticResource DarkEarthColor}"/>
    <SolidColorBrush x:Key="LeafGreenBrush" Color="{StaticResource LeafGreenColor}"/>
    <SolidColorBrush x:Key="BarnRedBrush" Color="{StaticResource BarnRedColor}"/>
    <SolidColorBrush x:Key="SidebarBgBrush" Color="{StaticResource SidebarBgColor}"/>
    <SolidColorBrush x:Key="ContentBgBrush" Color="{StaticResource ContentBgColor}"/>
    <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBgColor}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}"/>
    <SolidColorBrush x:Key="ActiveProfileBrush" Color="{StaticResource ActiveProfileColor}"/>

    <!-- Additional brushes -->
    <SolidColorBrush x:Key="SubtleTextBrush" Color="{StaticResource SubtleTextColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRedColor}"/>
    <SolidColorBrush x:Key="WarningOrangeBrush" Color="{StaticResource WarningOrangeColor}"/>
    <SolidColorBrush x:Key="SmapiGreenBrush" Color="{StaticResource SmapiGreenColor}"/>
    <SolidColorBrush x:Key="ConfigBorderBrush" Color="{StaticResource ConfigBorderColor}"/>
    <SolidColorBrush x:Key="DeleteBgBrush" Color="{StaticResource DeleteBgColor}"/>
    <SolidColorBrush x:Key="WarmGoldHoverBgBrush" Color="{StaticResource WarmGoldHoverBgColor}"/>
    <SolidColorBrush x:Key="BarnRedHoverBgBrush" Color="{StaticResource BarnRedHoverBgColor}"/>
    <SolidColorBrush x:Key="HeartRedHoverBgBrush" Color="{StaticResource HeartRedHoverBgColor}"/>
    <SolidColorBrush x:Key="LeafGreenHoverBgBrush" Color="{StaticResource LeafGreenHoverBgColor}"/>
    <SolidColorBrush x:Key="OverlayDimBrush" Color="{StaticResource OverlayDimColor}"/>
    <SolidColorBrush x:Key="OverlayDarkDimBrush" Color="{StaticResource OverlayDarkDimColor}"/>

    <!-- ==================== STANDARD BUTTON ==================== -->
    <Style x:Key="StardewButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ParchmentCreamBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkEarthBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WoodBrownBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource WarmGoldColor}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource WoodBrownColor}"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== PLAY BUTTON ==================== -->
    <Style x:Key="PlayButton" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource LeafGreenColor}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource WoodBrownBrush}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="30,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource LeafGreenHoverColor}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource PlayButtonPressedColor}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== DELETE BUTTON ==================== -->
    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource StardewButton}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource BarnRedColor}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource BarnRedHoverColor}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== SIDEBAR PROFILE BUTTON ==================== -->
    <Style x:Key="SidebarProfileButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SidebarTextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource SidebarHoverColor}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== TEXTBOX ==================== -->
    <Style x:Key="StardewTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkEarthBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WoodBrownBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost" Focusable="False"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== CHECKBOX (Stardew Style) ==================== -->
    <Style x:Key="StardewCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource DarkEarthBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="checkBorder"
                                Width="20" Height="20"
                                BorderBrush="{StaticResource WoodBrownBrush}"
                                BorderThickness="2"
                                CornerRadius="3"
                                Background="{StaticResource CardBgBrush}"
                                Margin="0,0,8,0">
                            <TextBlock x:Name="checkMark"
                                       Text="&#x2714;"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource LeafGreenBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="checkBorder" Property="BorderBrush"
                                    Value="{StaticResource WarmGoldBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== SCROLLVIEWER ==================== -->
    <Style x:Key="StardewScrollViewer" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- ==================== ICON BUTTON (transparent, hover-highlight) ==================== -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SubtleTextBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="5,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="Transparent"
                            Padding="{TemplateBinding Padding}" CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{StaticResource WarmGoldHoverBgBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon button variant with red hover for destructive actions -->
    <Style x:Key="IconButtonDestructive" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BarnRedBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="Transparent"
                            Padding="{TemplateBinding Padding}" CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{StaticResource BarnRedHoverBgBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== WIKI LINK BUTTON ==================== -->
    <Style x:Key="WikiLinkButton" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="IsTabStop" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
        <Setter Property="AutomationProperties.Name" Value="Learn more about this step on the wiki"/>
        <Setter Property="AutomationProperties.HelpText" Value="Opens the Sophisticated Mod Manager wiki in your browser"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="linkBorder" Background="Transparent"
                            BorderBrush="Transparent" BorderThickness="0"
                            Padding="6,4" CornerRadius="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4D6;" FontSize="14" Margin="0,0,6,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="linkText" FontSize="13" FontWeight="SemiBold"
                                       TextDecorations="Underline"
                                       Foreground="{StaticResource LeafGreenBrush}"
                                       Text="Learn more on the Wiki"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="linkText" Property="Foreground"
                                    Value="{StaticResource WarmGoldBrush}"/>
                            <Setter TargetName="linkBorder" Property="Background" Value="#10000000"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="linkBorder" Property="BorderBrush"
                                    Value="{StaticResource WarmGoldBrush}"/>
                            <Setter TargetName="linkBorder" Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
