<UserControl x:Class="SophisticatedModManager.Views.Overlays.FirstProfileOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SophisticatedModManager.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <Border Background="{StaticResource ContentBgBrush}" Padding="30,20">
        <StackPanel MaxWidth="450" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Sophisticated Mod Manager!"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource WoodBrownBrush}"
                       Margin="0,0,0,12"/>
            <TextBlock Text="Create your first mod profile to get started. A profile keeps a set of mods and their matching save file together, so switching between modded playthroughs is seamless."
                       FontSize="13" Foreground="{StaticResource SubtleTextBrush}" TextWrapping="Wrap" Margin="0,0,0,20"/>
            <TextBlock Text="Profile Name" FontSize="13" FontWeight="SemiBold"
                       Foreground="{StaticResource DarkEarthBrush}" Margin="0,0,0,4"/>
            <TextBox Style="{StaticResource StardewTextBox}"
                     Text="{Binding FirstProfileName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"/>
            <Button Content="Create Profile"
                    Style="{StaticResource StardewButton}"
                    Command="{Binding ConfirmFirstProfileCommand}"
                    HorizontalAlignment="Left"/>
            <Button Style="{StaticResource WikiLinkButton}"
                    Command="{Binding OpenWikiCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
