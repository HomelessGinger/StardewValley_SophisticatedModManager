<UserControl x:Class="SophisticatedModManager.Views.Overlays.BackupsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SophisticatedModManager.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <Border Background="{StaticResource ContentBgBrush}" Padding="30,20">
        <StackPanel MaxWidth="500" HorizontalAlignment="Center">
            <TextBlock Text="Save Backups" FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource DarkEarthBrush}" Margin="0,0,0,8"/>
            <TextBlock Text="{Binding SelectedProfile.Name, StringFormat='Profile: {0}'}"
                       FontSize="13" Foreground="{StaticResource DarkEarthBrush}" Margin="0,0,0,4"/>
            <TextBlock Text="{Binding CurrentSaveTimestampDisplay}"
                       FontSize="12" Foreground="{StaticResource LeafGreenBrush}" Margin="0,0,0,16"/>

            <!-- Confirmation Panel -->
            <Border Background="{StaticResource CardBgBrush}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,12"
                    Visibility="{Binding IsConfirmingRestore, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="Are you sure you want to restore this save?"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource BarnRedBrush}" Margin="0,0,0,6"/>
                    <TextBlock Text="{Binding SelectedBackup.SaveNameDisplay, StringFormat='Save: {0}'}"
                               FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource DarkEarthBrush}" Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding SelectedBackup.TimestampDisplay, StringFormat='Restore to: {0}'}"
                               FontSize="12" Foreground="{StaticResource DarkEarthBrush}" Margin="0,0,0,4"/>
                    <TextBlock Text="This will replace this save with the backup contents."
                               FontSize="11" Foreground="{StaticResource SubtleTextBrush}" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Restore" Style="{StaticResource DeleteButton}"
                                Command="{Binding ConfirmRestoreBackupCommand}"
                                Padding="12,4" FontSize="12" Margin="0,0,8,0"/>
                        <Button Content="Cancel" Style="{StaticResource StardewButton}"
                                Command="{Binding CancelRestoreCommand}"
                                Padding="12,4" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Backups List -->
            <ScrollViewer MaxHeight="350" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
                <ItemsControl ItemsSource="{Binding BackupItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardBgBrush}"
                                    BorderBrush="{StaticResource CardBorderBrush}"
                                    BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding SaveNameDisplay}" FontSize="13"
                                                   FontWeight="SemiBold" Foreground="{StaticResource DarkEarthBrush}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding TimestampDisplay}" FontSize="11"
                                                       Foreground="{StaticResource SubtleTextBrush}" Margin="0,0,12,0"/>
                                            <TextBlock Text="{Binding RelativeTimeDisplay}" FontSize="11"
                                                       Foreground="{StaticResource SubtleTextBrush}" Margin="0,0,12,0"/>
                                            <TextBlock Text="{Binding SizeDisplay}" FontSize="11"
                                                       Foreground="{StaticResource SubtleTextBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Restore"
                                            Style="{StaticResource StardewButton}"
                                            Command="{Binding DataContext.SelectBackupForRestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="10,4" FontSize="11" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <TextBlock Text="No backups found for this profile."
                       FontSize="12" Foreground="{StaticResource SubtleTextBrush}" Margin="0,0,0,16"
                       TextAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding BackupItems.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Restore All Confirmation Panel -->
            <Border Background="{StaticResource CardBgBrush}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,12"
                    Visibility="{Binding IsRestoreAllMode, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="Restore All Saves" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource BarnRedBrush}" Margin="0,0,0,4"/>
                    <TextBlock Text="Select which saves to restore to their latest backup:"
                               FontSize="11" Foreground="{StaticResource SubtleTextBrush}" TextWrapping="Wrap" Margin="0,0,0,8"/>

                    <ItemsControl ItemsSource="{Binding RestoreAllItems}" Margin="0,0,0,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" Padding="4,3" Margin="0,0,0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}"
                                                  Style="{StaticResource StardewCheckBox}"
                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SaveName}"
                                                   FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{StaticResource DarkEarthBrush}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding TimestampDisplay}"
                                                   FontSize="11" Foreground="{StaticResource SubtleTextBrush}"
                                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        <TextBlock Grid.Column="3" Text="{Binding SizeDisplay}"
                                                   FontSize="11" Foreground="{StaticResource SubtleTextBrush}"
                                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Restore Selected" Style="{StaticResource DeleteButton}"
                                Command="{Binding ConfirmRestoreAllCommand}"
                                Padding="12,4" FontSize="12" Margin="0,0,8,0"/>
                        <Button Content="Cancel" Style="{StaticResource StardewButton}"
                                Command="{Binding CancelRestoreAllCommand}"
                                Padding="12,4" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal">
                <Button Content="Close" Style="{StaticResource StardewButton}"
                        Command="{Binding CloseBackupsCommand}"
                        Padding="16,4" Margin="0,0,8,0"/>
                <Button Content="Restore All" Style="{StaticResource StardewButton}"
                        Command="{Binding OpenRestoreAllCommand}"
                        Padding="16,4"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
