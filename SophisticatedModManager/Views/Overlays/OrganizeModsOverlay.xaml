<UserControl x:Class="SophisticatedModManager.Views.Overlays.OrganizeModsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SophisticatedModManager.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <Border Background="{StaticResource ContentBgBrush}" Padding="30,20">
        <StackPanel MaxWidth="500" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Existing Mods Detected"
                       FontSize="20" FontWeight="Bold"
                       Foreground="{StaticResource WoodBrownBrush}"
                       Margin="0,0,0,12"/>
            <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="{StaticResource SubtleTextBrush}" Margin="0,0,0,16">
                Mods were found in your Mods folder but they aren't organized into a profile yet.
                A profile is a modpack that has mods specific to a save that would conflict with
                vanilla or other saves. It's highly recommended to organize them into a profile
                if you plan to create more.
            </TextBlock>
            <TextBlock Text="Profile Name" FontSize="13" FontWeight="SemiBold"
                       Foreground="{StaticResource DarkEarthBrush}" Margin="0,0,0,4"/>
            <TextBox Style="{StaticResource StardewTextBox}"
                     Text="{Binding OrganizeProfileName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Yes, Move Mods Into Profile"
                        Style="{StaticResource StardewButton}"
                        Command="{Binding ConfirmOrganizeYesCommand}"
                        Margin="0,0,8,0"/>
                <Button Content="No, Keep as Common"
                        Style="{StaticResource StardewButton}"
                        Command="{Binding ConfirmOrganizeNoCommand}"/>
            </StackPanel>
            <Button Style="{StaticResource WikiLinkButton}"
                    Command="{Binding OpenWikiCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
